<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginCtrl</servlet-name>
        <servlet-class>com.controlador.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearUsuarioCtrl</servlet-name>
        <servlet-class>com.controlador.CrearUsuarioCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCrearCurso</servlet-name>
        <servlet-class>com.controlador.ServletCrearCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditarUsuario</servlet-name>
        <servlet-class>com.controlador.ServletEditarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAsignarDocente</servlet-name>
        <servlet-class>com.controlador.ServletAsignarDocente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletIngresarContenido</servlet-name>
        <servlet-class>com.controlador.ServletIngresarContenido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInscribirEstudiante</servlet-name>
        <servlet-class>com.controlador.ServletInscribirEstudiante</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginCtrl</servlet-name>
        <url-pattern>/loginCtrl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearUsuarioCtrl</servlet-name>
        <url-pattern>/CrearUsuarioCtrl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCrearCurso</servlet-name>
        <url-pattern>/ServletCrearCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditarUsuario</servlet-name>
        <url-pattern>/ServletEditarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAsignarDocente</servlet-name>
        <url-pattern>/ServletAsignarDocente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletIngresarContenido</servlet-name>
        <url-pattern>/ServletIngresarContenido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInscribirEstudiante</servlet-name>
        <url-pattern>/ServletInscribirEstudiante</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

